<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h2 class="error-name"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>

  <div class="action">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  
  <div class="action">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Update Book', class: "action btn" %>
  
  <div>
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', '/books' %>
  </div>
  
<% end %>